<!DOCTYPE html>
<html>
<title>PDFShare</title>

<head>
  {% block head %}
  {% endblock %}
  {% block styles %}
  <link rel="shortcut icon" href="{{ url_for('static', filename='icons/favicon.ico') }}">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="/static/css/config-box.css">
  <link rel="stylesheet" href="/static/css/base.css">
  {% endblock %}
</head>

<body>
  <div class="sticky-top config-box pt-2" id="config">
    <div class="px-1 pb-1">
      <button type="button" class="btn-option" id="dark-mode-btn">
        Dark Mode
      </button>
    </div>
    <div class="px-1 pb-1">
      <button type="button" class="btn-option" id="switch-view-btn">
        List View
      </button>
    </div>
  </div>

  {% block body %}
  {% endblock %}

  {% block scripts %}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
  <script src="/static/js/config-box.js" type="module"></script>
  {% endblock %}
</body>

</html>