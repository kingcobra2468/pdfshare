{% extends 'layouts/base.jinja2' %}

{% block styles %}
{{super()}}
<link rel="stylesheet" href="/static/css/list-view.css">
{% endblock %}

{% block body %}
<div class="container-fluid pt-5">
  <div class="row">
    <div class="col-lg-11 col-md-11 col-sm-10">
      <ul class="download-link">
      {% for book_name, encoded_book_tag in books%}
        <li>
          <a class="download-link" href="/library/download?book={{encoded_book_tag}}">{{book_name}}
          </a>
        </li>
      {% endfor %}
      </ul>
    </div>
  </div>
</div>
{% endblock %}

{% block scripts %}
{{super()}}
<script src="/static/js/list-view.js" type="module"></script>
{% endblock %}